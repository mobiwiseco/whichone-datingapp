<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_dialog_voter_profile"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:border_width="2dp"
        app:border_color="@color/color_main_light" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_green_dot"
        android:layout_alignBottom="@+id/imageview_dialog_voter_profile"
        android:layout_alignLeft="@+id/imageview_dialog_voter_profile"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"/>

    <view.RobotoLightTextView
        android:id="@+id/textview_dialog_voter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imageview_dialog_voter_profile"
        android:textSize="20sp"
        android:textColor="@color/color_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Mert Şimşek" />

    <view.RobotoThinTextView
        android:id="@+id/textview_dialog_voter_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textview_dialog_voter_name"
        android:textSize="20sp"
        android:textColor="@color/color_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Mert Şimşek" />

    <view.RobotoBlackTextview
        android:id="@+id/textview_dialog_voter_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textview_dialog_voter_live"
        android:textSize="19sp"
        android:textColor="@color/color_main"
        android:layout_centerHorizontal="true"
        android:text="@string/dialog_win_send_message"
        android:layout_marginTop="40dp"/>


    <view.RobotoBlackTextview
        android:id="@+id/textview_dialog_voter_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textview_dialog_voter_send_message"
        android:textSize="19sp"
        android:text="@string/dialog_win_add_on_facebook"
        android:textColor="@color/color_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>